<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit <%= product.name %> </h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/products/<%= product._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="product[name]" value="<%= product.name %>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="product[price]" value="<%= product.price %>" min="0.99" step="1.00">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="product[image]" value="<%= product.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="product[description]" value="<%= product.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-secondary btn-block"><a href="/products">Go back!</a></button>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../partials/footer %>